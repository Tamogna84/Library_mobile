<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EditBookActivity">

    <EditText
        android:id="@+id/title_edit_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите название книги..."
        />

    <EditText
        android:id="@+id/author_edit_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите автора книги..."
        />

    <EditText
        android:id="@+id/description_edit_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите описание книги..."
        />

    <ImageView
        android:id="@+id/edit_cover_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:contentDescription="Cover"
        />

    <Button
        android:id="@+id/edit_cover_load_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Загрузить обложку"
        />

    <Button
        android:id="@+id/save_edit_book_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Сохранить"
        />

</LinearLayout>